<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".UC4Activity"
    android:layout_height="match_parent"
    android:stretchColumns="0,1">

    <TableRow>

        <Button
            android:id="@+id/uc4_tr1_btn1"
            android:text="BUTTON1"
            android:layout_width="wrap_content"
            android:onClick="showToast_1"
            android:layout_height="wrap_content"
            />

        <Button
            android:onClick="showToast_2"
            android:text="BUTTON2"
            android:layout_height="match_parent"
            android:id="@+id/uc4_tr1_btn2"
            />

    </TableRow>
    <Button
        android:layout_height="wrap_content"
        android:id="@+id/uc4_btn1"
        android:text="BUTTON3"
        android:layout_width="match_parent"
        android:onClick="showToast_3"/>

    <TableRow>
        <Button
            android:id="@+id/uc4_tr2_btn1"
            android:layout_height="wrap_content"
            android:text="BUTTON4"
            android:onClick="showToast_4"/>
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返回"
            android:id="@+id/uc3_btn1"
            android:onClick="return1"
            android:gravity="center_horizontal"
             />

    </RelativeLayout>

</TableLayout>

